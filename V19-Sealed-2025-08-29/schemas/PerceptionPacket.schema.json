{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PerceptionPacket",
  "type": "object",
  "properties": {
    "trace_id": { "type": "string" },
    "intent": { "type": "string", "minLength": 1 },
    "entities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "value"],
        "properties": {
          "type": { "type": "string" },
          "value": {},
          "span": { "type": "array", "items": { "type": "integer" }, "minItems": 2, "maxItems": 2 }
        },
        "additionalProperties": false
      }
    },
    "doc_id": { "type": "string" },
    "spans": {
      "type": "array",
      "items": { "type": "array", "items": { "type": "integer" }, "minItems": 2, "maxItems": 2 }
    },
    "timestamps": {
      "type": "array",
      "items": { "type": "object", "properties": { "t0": { "type": "number" }, "t1": { "type": "number" }, "text": { "type": "string" } }, "required": ["t0","t1","text"], "additionalProperties": false }
    },
    "image": {
      "type": "object",
      "properties": {
        "tags": { "type": "array", "items": { "type": "string" } },
        "bboxes": { "type": "array", "items": { "type": "array", "items": { "type": "number" }, "minItems": 4, "maxItems": 4 } },
        "ocr": { "type": "string" }
      },
      "additionalProperties": false
    },
    "candidate_microfacts": { "type": "array", "items": { "type": "string" } },
    "source": {
      "type": "object",
      "required": ["kind","path"],
      "properties": {
        "kind": { "type": "string", "enum": ["text","image","audio","video"] },
        "path": { "type": "string" },
        "hash": { "type": "string" }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "language": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": true
    }
  },
  "required": ["trace_id","intent","entities","source"],
  "additionalProperties": false
}
